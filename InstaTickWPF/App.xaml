<Application x:Class="InstaTickWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InstaTickWPF"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Dark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="MyListBoxStyle" TargetType="{x:Type ListBox}">
                <Setter Property="Background" Value="#2C2F33 "/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
            <Style x:Key="MyTextBlockStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="Background" Value="#2C2F33"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style x:Key="MyStackPanelStyle" TargetType="{x:Type StackPanel}">
                <Setter Property="Background" Value="#2C2F33"/>
            </Style>


        </ResourceDictionary>
    </Application.Resources>

</Application>
